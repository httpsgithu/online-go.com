.LadderList {
    // here
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;

    .Card {
        width: 20rem;
        max-width: 100vw;
        min-height: 30rem;
        text-align: center;
    }

    button {
        margin-right: 0.5rem;
    }

    td.player-column {
        text-align: left;
    }
}

.MyLadders {
    text-align: left;
    margin: auto;

    .player-rank {
        display: inline-block;
        margin-right: 1rem;
        min-width: 3rem;
    }

    .MyLadders-row {
        margin-left: 2rem;
        max-width: 100vw;
        padding-bottom: 0.5rem;
    }

    .group-icon {
        display: inline-block;
        width: 1rem;
        height: 1rem;
    }

    .fa-list-ol {
        color: supporter;
    }

    .fa-list-ol, .group-icon {
        margin-right: 0.5rem;
    }
}
