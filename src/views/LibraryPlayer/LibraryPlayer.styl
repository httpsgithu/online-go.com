.LibraryPlayer {
    .breadcrumbs {
        display: flex;
        padding: 1rem;
        font-size: font-size-big;

        .breadcrumb {
            cursor: pointer;
            padding-left: 0.5rem;
        }

        .breadcrumb:hover {
            text-decoration: underline;
        }
    }

    .collections {
        cursor: pointer;
        margin-bottom: 1rem;
    }

    .games {
    }

    .Card {
        overflow-x: auto;
    }

    .collections, .games {
        display: table;
    }

    .collection-entry, .game-entry, .sort-header {
        display: table-row;

        span {
            display: table-cell;
            padding-right: 1rem;
        }
    }

    .sort-header {
        font-weight: 700;
    }

    .sortable {
        cursor: pointer;
    }

    .sortable:after {
        display: inline-block;
        width: 0.8rem;
        font-size: 0.7rem;
        margin-left: 0.2rem;
        margin-bottom: 0.2rem;
        font-family: 'FontAwesome';
        content: ' ';
    }

    .sortable.sorted-asc:after {
        content: fa-sort-asc-content;
    }

    .sortable.sorted-desc:after {
        content: fa-sort-desc-content;
    }

    .private-lock {
        // cursor: pointer;
        width: 2rem;
        text-align: center;
    }

    .fa-lock, .fa-unlock {
        cursor: pointer;
    }

    .collection-entry:hover {
        cursor: pointer;
        text-decoration: underline;
    }

    .date-column {
        min-width: 10rem;
    }

    .collection {
        padding-left: 2rem;
    }

    .collection, .name-column {
        min-width: 12rem;
    }

    .black-column, .white-column {
        min-width: 6rem;
    }

    .outcome-column {
        min-width: 5rem;
    }

    .empty-text {
        text-align: center;
    }

    .new-collection {
        input[type='text'] {
            width: 100%;
            margin: 0.5rem 1rem 0.5rem 0;
        }

        label {
            user-select: none;
        }

        .name-checkbox {
            margin-right: 1rem;

            i {
                margin: 0 0.5rem;
            }
        }
    }

    .upload-button {
        float: right;
    }
}
